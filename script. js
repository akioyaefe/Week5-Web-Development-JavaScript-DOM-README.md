/* script.js
   Week 5 Web Development Assignment
   Demonstrates variables, loops, functions, and DOM manipulation
*/

// 1. VARIABLES & DATA TYPES
let userName = "Eddy"; // string
const birthYear = 2010; // number
var isStudent = true; // boolean

let hobbies = ["Reading", "Coding", "Gaming"]; // array
let person = { name: "Eddy", role: "Student" }; // object

console.log(userName, birthYear, isStudent);
console.log(hobbies);
console.log(person);

// 2. FUNCTION EXAMPLES

// Function Declaration
function greet(name) {
  return `Hello, ${name}! Welcome to Week 5 assignment.`;
}

// Function Expression
const add = function(a, b) {
  return a + b;
}

// Arrow Function
const multiply = (x, y) => x * y;

console.log(greet(userName));
console.log("Addition:", add(5, 3));
console.log("Multiplication:", multiply(4, 6));

// 3. LOOP EXAMPLES

// for loop
for (let i = 1; i <= 5; i++) {
  console.log(`For Loop Count: ${i}`);
}

// while loop
let j = 1;
while (j <= 5) {
  console.log(`While Loop Count: ${j}`);
  j++;
}

// do-while loop
let k = 1;
do {
  console.log(`Do-While Loop Count: ${k}`);
  k++;
} while (k <= 5);

// for...of loop (array)
for (let hobby of hobbies) {
  console.log(`Hobby: ${hobby}`);
}

// for...in loop (object)
for (let key in person) {
  console.log(`${key}: ${person[key]}`);
}

// if-else example
if (isStudent) {
  console.log("User is a student.");
} else {
  console.log("User is not a student.");
}

// switch example
switch(birthYear) {
  case 2010:
    console.log("Born in 2010");
    break;
  default:
    console.log("Different year");
}

// 4. DOM MANIPULATION & INTERACTIVITY

// Select elements
const message = document.getElementById("message");
const addButton = document.getElementById("add");
const list = document.getElementById("list");

// Function to add new item
function addItem(itemName) {
  const newItem = document.createElement("li");
  newItem.textContent = itemName;
  list.appendChild(newItem);
}

// Button click event
addButton.addEventListener("click", () => {
  addItem("New List Item");
  message.textContent = "You added a new item!";
  message.style.color = "green";
});

// Example of using break and continue in a loop
for (let n = 1; n <= 10; n++) {
  if (n === 3) continue; // skip 3
  if (n === 7) break;    // stop at 7
  console.log(`Number: ${n}`);
}
